<div class="task" id="<%= set_task_status_project_url(task_id: task.id, id: @project.id) %>" >
  <em style="margin:0; max-width:150px;white-space:initial;"><%= task.title%></em>
  <div style="display:flex;margin: 0 20px;">
    <% task.priority.times do %>
      <i class="fa-solid fa-circle fa-2xs" style="color:#FF333A;"></i>
    <%end%>
  </div>
    <% task_user = User.find(task.user_id)%>
    <%if task_user.photo.attached?%>
        <%= cl_image_tag task_user.photo.key, class:"avatar", crop: :fill %>
    <% else %>
      <img class="avatar" src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png">
    <% end %>
</div>
