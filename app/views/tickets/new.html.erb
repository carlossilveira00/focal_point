<div style="margin-left:130px">
  <h1 style="margin-top:10px; margin-left:20px">Ticket</h1>
  <div>
    <div class="text-center padding-left:100px" style="margin-left:10px; margin-top:15px">
      <div class="card-subject text-center">
        <div class="d-flex">
          <img class="assigned-avatar" style="margin:20px" src="http://res.cloudinary.com/djn023to9/image/upload/c_fill/v1/production/uksu8qrxln8cetj78lk72pglrsz3">
          <div style="width:880px; padding-top:30px">
            <%= simple_form_for [@project,@ticket] do |f| %>
              <%= f.input :title %>
              <%= f.input :description, :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 }%>
              <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }%>
              <%= f.input :project_id, :as => :hidden, :input_html => { :value => @project.id }%>
              <%= f.input :status, :as => :hidden, :input_html => { :value => "Open" }%>
            <% end %>
          </div>
        </div>
      </div>
        <div class="form-actions text-right">
          <input class="btn-submit" type="submit" value="Submit">
        </div>
    </div>
  </div>
</div>
