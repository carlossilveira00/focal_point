<div style="margin-left:130px">
  <h1 style="margin-top:10px; margin-left:20px">Ticket</h1>
  <div>
    <div class="text-center padding-left:100px" style="margin-left:10px; margin-top:15px">
      <div class="card-subject text-center">
        <div class="d-flex">
          <img class="assigned-avatar" style="margin:30px" src="http://res.cloudinary.com/djn023to9/image/upload/c_fill/v1/production/uksu8qrxln8cetj78lk72pglrsz3">
          <div class= "text-form-ticket"style="padding-top:30px">
            <%= simple_form_for [@project,@ticket] do |f| %>
              <div class="form-title" style="width:900px"><%= f.input :title %></div>
              <div class="form-description" style="width:980px; height: 600px; margin-left:-80px">
                <%= f.input :description,
                            :as => :text,
                            :input_html => {
                               'rows' => 5,
                               'cols' => 10,
                               style: 'min-height: 180px; overflow-y:scroll;'
                            }%>
              </div>
              <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }%>
              <%= f.input :project_id, :as => :hidden, :input_html => { :value => @project.id }%>
              <%= f.input :status, :as => :hidden, :input_html => { :value => "Open" }%>
          </div>
        </div>
      </div>
        <div class="form-actions text-right">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
